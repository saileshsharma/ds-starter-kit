{
  "page": "DataListing",
  "route": "/listing",
  "meta": {
    "title": "Data Listing",
    "description": "Browse and manage data"
  },
  "sections": [
    {
      "type": "CardComponent",
      "inputs": {
        "title": "Search & Filters"
      },
      "children": [
        {
          "type": "StackComponent",
          "inputs": {
            "spacing": "3"
          },
          "children": [
            {
              "type": "InputComponent",
              "inputs": {
                "placeholder": "Search...",
                "type": "text"
              }
            },
            {
              "type": "SelectComponent",
              "inputs": {
                "placeholder": "Filter by status",
                "options": [
                  {
                    "value": "all",
                    "label": "All"
                  },
                  {
                    "value": "active",
                    "label": "Active"
                  },
                  {
                    "value": "inactive",
                    "label": "Inactive"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "CardComponent",
      "inputs": {
        "title": "Results"
      },
      "children": [
        {
          "type": "DataTableComponent",
          "inputs": {
            "columns": [
              {
                "key": "id",
                "header": "ID"
              },
              {
                "key": "name",
                "header": "Name"
              },
              {
                "key": "status",
                "header": "Status"
              },
              {
                "key": "created",
                "header": "Created"
              }
            ],
            "dataSource": {
              "kind": "rest",
              "query": "/api/items",
              "variables": {
                "page": 1,
                "limit": 20
              }
            },
            "sortable": true,
            "pagination": true
          }
        }
      ]
    }
  ]
}