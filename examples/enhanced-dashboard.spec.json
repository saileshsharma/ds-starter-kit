{
  "page": "EnhancedDashboard",
  "route": "/dashboard",
  "meta": {
    "title": "Enhanced Dashboard",
    "description": "A comprehensive dashboard with data integration and advanced components",
    "keywords": ["dashboard", "analytics", "data"]
  },
  "layout": {
    "type": "Grid",
    "cols": 12,
    "gap": "spacing.4"
  },
  "sections": [
    {
      "type": "Card",
      "id": "mainMetrics",
      "gridArea": {
        "from": 1,
        "to": 8,
        "row": 1
      },
      "props": {
        "title": "Performance Metrics",
        "subtitle": "Real-time business indicators",
        "shadow": "md"
      },
      "children": [
        {
          "type": "Stack",
          "props": {
            "spacing": "4",
            "align": "stretch"
          },
          "children": [
            {
              "type": "DataTable",
              "id": "metricsTable",
              "props": {
                "columns": [
                  {
                    "key": "metric",
                    "header": "Metric"
                  },
                  {
                    "key": "value",
                    "header": "Current Value"
                  },
                  {
                    "key": "change",
                    "header": "Change"
                  },
                  {
                    "key": "trend",
                    "header": "Trend"
                  }
                ],
                "dataSource": {
                  "kind": "rest",
                  "query": "/api/metrics",
                  "variables": {
                    "period": "today"
                  }
                },
                "sortable": true,
                "pagination": false
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Card",
      "id": "quickStats",
      "gridArea": {
        "from": 9,
        "to": 12,
        "row": 1
      },
      "props": {
        "title": "Quick Stats",
        "shadow": "md"
      },
      "children": [
        {
          "type": "Stack",
          "props": {
            "spacing": "3"
          },
          "children": [
            {
              "type": "Stat",
              "props": {
                "label": "Total Revenue",
                "value": "{{revenueData.total}}",
                "trend": "up",
                "change": "+12.5%"
              }
            },
            {
              "type": "Stat",
              "props": {
                "label": "Active Users",
                "value": "{{userData.active}}",
                "trend": "up",
                "change": "+5.2%"
              }
            },
            {
              "type": "Stat",
              "props": {
                "label": "Conversion Rate",
                "value": "{{conversionData.rate}}",
                "trend": "neutral",
                "change": "0.1%"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "Card",
      "id": "userActivity",
      "gridArea": {
        "from": 1,
        "to": 6,
        "row": 2
      },
      "props": {
        "title": "Recent User Activity",
        "shadow": "md"
      },
      "children": [
        {
          "type": "DataTable",
          "id": "activityTable",
          "props": {
            "columns": [
              {
                "key": "user",
                "header": "User"
              },
              {
                "key": "action",
                "header": "Action"
              },
              {
                "key": "timestamp",
                "header": "Time"
              },
              {
                "key": "status",
                "header": "Status"
              }
            ],
            "dataSource": {
              "kind": "graphql",
              "query": "GET_USER_ACTIVITY",
              "variables": {
                "limit": 10,
                "orderBy": "timestamp"
              }
            },
            "pagination": true,
            "loading": true
          }
        }
      ]
    },
    {
      "type": "Card",
      "id": "systemHealth",
      "gridArea": {
        "from": 7,
        "to": 12,
        "row": 2
      },
      "props": {
        "title": "System Health",
        "shadow": "md"
      },
      "children": [
        {
          "type": "Stack",
          "props": {
            "spacing": "4"
          },
          "children": [
            {
              "type": "Stack",
              "props": {
                "spacing": "2"
              },
              "children": [
                {
                  "type": "Text",
                  "props": {
                    "size": "sm",
                    "weight": "medium"
                  },
                  "text": "Service Status"
                },
                {
                  "type": "Badge",
                  "props": {
                    "variant": "success"
                  },
                  "text": "All Systems Operational"
                }
              ]
            },
            {
              "type": "Stack",
              "props": {
                "spacing": "2"
              },
              "children": [
                {
                  "type": "Stat",
                  "props": {
                    "label": "Response Time",
                    "value": "{{systemData.responseTime}}ms"
                  }
                },
                {
                  "type": "Stat",
                  "props": {
                    "label": "Uptime",
                    "value": "{{systemData.uptime}}"
                  }
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "Card",
      "id": "actions",
      "gridArea": {
        "from": 1,
        "to": 12,
        "row": 3
      },
      "props": {
        "title": "Quick Actions",
        "shadow": "sm"
      },
      "children": [
        {
          "type": "Stack",
          "props": {
            "spacing": "4"
          },
          "children": [
            {
              "type": "Button",
              "props": {
                "variant": "primary",
                "size": "md"
              },
              "text": "Generate Report",
              "events": {
                "onClick": "handleGenerateReport"
              }
            },
            {
              "type": "Button",
              "props": {
                "variant": "secondary",
                "size": "md"
              },
              "text": "Export Data",
              "events": {
                "onClick": "handleExportData"
              }
            },
            {
              "type": "Button",
              "props": {
                "variant": "outline",
                "size": "md"
              },
              "text": "Configure Dashboard",
              "events": {
                "onClick": "handleConfigure"
              }
            }
          ]
        }
      ]
    }
  ],
  "dataSource": {
    "queries": [
      {
        "name": "revenueData",
        "type": "rest",
        "query": "/api/revenue/summary"
      },
      {
        "name": "userData",
        "type": "graphql",
        "query": "GET_USER_STATS"
      },
      {
        "name": "conversionData",
        "type": "rest",
        "query": "/api/conversion/rates"
      },
      {
        "name": "systemData",
        "type": "rest",
        "query": "/api/system/health"
      }
    ]
  }
}